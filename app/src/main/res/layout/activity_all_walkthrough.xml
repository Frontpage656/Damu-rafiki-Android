<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/walk_through_bg"
    android:layout_height="match_parent"
    tools:context=".All_walkThrough">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="713dp"
        android:layout_above="@+id/dotts_it"
        android:layout_marginBottom="-7dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/dotts_it"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/dotts_layout"
            android:layout_width="392dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/my_primary_color"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/button_finish"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@color/my_primary_color"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="FINISH"
            android:textColor="@color/white"
            android:textSize="24dp" />

    </LinearLayout>

</RelativeLayout>