<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/first_img" />

    <TextView
        android:id="@+id/the_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-92dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="Unahitaji damu?"
        android:textColor="@color/my_primary_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/the_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-69dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Tafuta wachangia damu karibu yako"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

</RelativeLayout>