<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Ask_for_blood">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/book_img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID NAMBA"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/my_primary_color"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Weka namba ya kitambulisho cha kuombea damu"
        android:textAlignment="center"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/inputs"
            android:orientation="horizontal"
            android:padding="5dp">


            <EditText
                android:id="@+id/id_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:background="@drawable/empty"
                android:hint="ID namba"
                android:layout_weight="1"
                android:inputType="number" />

            <ImageView
                android:id="@+id/scan_qr"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:src="@drawable/qr_logo" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>